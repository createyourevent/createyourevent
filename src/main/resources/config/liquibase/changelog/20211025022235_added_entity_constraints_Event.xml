<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <!--
        Added the constraints for entity Event.
    -->
    <changeSet id="20211025022235-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="event"
                                 constraintName="fk_event__location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="event_detail_id"
                                 baseTableName="event"
                                 constraintName="fk_event__event_detail_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event_details"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="event"
                                 constraintName="fk_event__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="rel_event__reserved_users"
                                 constraintName="fk_rel_event__reserved_users__event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="reserved_users_id"
                                 baseTableName="rel_event__reserved_users"
                                 constraintName="fk_rel_event__reserved_users__reserved_users_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>
    </changeSet>
</databaseChangeLog>
