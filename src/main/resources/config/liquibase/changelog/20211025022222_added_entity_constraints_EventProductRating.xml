    <!--
        Added the constraints for entity EventProductRating.
    -->
    <changeSet id="20211025022222-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="event_product_rating"
                                 constraintName="fk_event_product_rating__product_id"
                                 referencedColumnNames="id"
